<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".MainActivity">

        <GridLayout
            android:layout_marginTop="2dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="6"
            android:id="@+id/grid">

                <ImageView
                    android:layout_row="0"
                    android:layout_column="0"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_columnWeight="1"
                    android:id="@+id/imageView1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    tools:srcCompat="@tools:sample/avatars" />
                <ImageView
                    android:layout_row="0"
                    android:layout_column="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_columnWeight="1"
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    tools:srcCompat="@tools:sample/avatars" />
                <ImageView
                    android:layout_row="0"
                    android:layout_column="2"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_columnWeight="1"
                    android:id="@+id/imageView3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    tools:srcCompat="@tools:sample/avatars" />
                <ImageView
                    android:layout_row="0"
                    android:layout_column="3"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_columnWeight="1"
                    android:id="@+id/imageView4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    tools:srcCompat="@tools:sample/avatars" />
                <ImageView
                    android:layout_row="0"
                    android:layout_column="4"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_columnWeight="1"
                    android:id="@+id/imageView5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    tools:srcCompat="@tools:sample/avatars" />
                <ImageView
                    android:layout_row="0"
                    android:layout_column="5"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_columnWeight="1"
                    android:id="@+id/imageView6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    tools:srcCompat="@tools:sample/avatars" />
                <ImageView
                    android:layout_row="1"
                    android:layout_column="0"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_columnWeight="1"
                    android:id="@+id/imageView7"
                    android:layout_width="50dp"
                    android:layout_height="5dp"
                    android:background="#82FF48"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    tools:srcCompat="@tools:sample/avatars" />
                <ImageView
                    android:layout_row="1"
                    android:layout_column="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_columnWeight="1"
                    android:id="@+id/imageView8"
                    android:layout_width="50dp"
                    android:layout_height="5dp"
                    android:background="#FF82FF48"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    tools:srcCompat="@tools:sample/avatars" />
                <ImageView
                    android:layout_row="1"
                    android:layout_column="2"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_columnWeight="1"
                    android:id="@+id/imageView9"
                    android:layout_width="50dp"
                    android:layout_height="5dp"
                    android:background="#FF82FF48"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    tools:srcCompat="@tools:sample/avatars" />
                <ImageView
                    android:layout_row="1"
                    android:layout_column="3"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_columnWeight="1"
                    android:id="@+id/imageView10"
                    android:layout_width="50dp"
                    android:layout_height="5dp"
                    android:background="#FF82FF48"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    tools:srcCompat="@tools:sample/avatars" />
                <ImageView
                    android:layout_row="1"
                    android:layout_column="4"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_columnWeight="1"
                    android:id="@+id/imageView11"
                    android:layout_width="50dp"
                    android:layout_height="5dp"
                    android:background="#FF82FF48"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    tools:srcCompat="@tools:sample/avatars" />
                <ImageView
                    android:layout_row="1"
                    android:layout_column="5"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_columnWeight="1"
                    android:id="@+id/imageView12"
                    android:layout_width="50dp"
                    android:layout_height="5dp"
                    android:background="#FF82FF48"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    tools:srcCompat="@tools:sample/avatars" />
        </GridLayout>

        <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Debug Colours Will Appear Here:"
                    android:layout_centerInParent="true"
                    android:layout_above="@id/cameraView"/>

                <org.opencv.android.JavaCameraView
                    android:id="@+id/cameraView"
                    android:layout_height="300dp"
                    android:layout_width="300dp"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    app:camera_id="any"
                    app:show_fps="false"
                    android:layout_above="@id/bottom_navigation"
                    android:layout_marginBottom="35dp"/>

        <LinearLayout
            android:id="@+id/buttonLinear"
            android:layout_width="match_parent"
            android:layout_height="563dp"
            android:layout_above="@id/textView"
            android:layout_below="@id/grid"
            android:layout_centerInParent="true"
            android:layout_marginTop="39dp"
            >

                <Button
                    android:id="@+id/resetButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginHorizontal="50dp"
                    android:layout_weight="1"
                    android:background="@color/red1"
                    android:onClick="reset"
                    android:text="Reset"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/captureButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginRight="50dp"
                    android:layout_weight="1"
                    android:background="@color/red1"
                    android:onClick="captureButton"
                    android:text="Capture"
                    android:textColor="#FFFFFF" />
        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemBackground="@color/colorPrimary"
            app:itemIconTint="@android:color/white"
            app:itemTextColor="@android:color/white"
            app:menu="@menu/menu"></com.google.android.material.bottomnavigation.BottomNavigationView>



</RelativeLayout>